{
	"name": "docker-linter",
	"description": "",
	"version": "0.0.1",
	"publisher": "henriiik",
	"engines": {
		"vscode": "*"
	},
	"dependencies": {
		"vscode-languageworker": "*"
	},
	"devDependencies": {
		"typescript": "^1.6.2"
	},
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "docker-linter configuration",
			"properties": {
				"docker-linter.perl.machine": {
					"type": "string",
					"default": "default",
					"description": "The name of your docker machine."
				},
				"docker-linter.perl.enable": {
					"type": "boolean",
					"default": false,
					"description": "Control whether docker-linter is enabled for perl files or not."
				}
			}
		},		
		"languageWorkers": {
			"activate": ["onLanguage:perl"],
			"executable": {
				"run": {
					"nodeModule": "out/extension.js"
				},
				"debug": {
					"nodeModule": "out/extension.js",
					"execArgv": ["--nolazy", "--debug=5871"]
				}
			},
			"settings": "docker-linter.perl"
		}
	},
	"scripts": {
		"vscode:prepublish": "./node_modules/.bin/tsc",
		"compile": "./node_modules/.bin/tsc -watch -p ./"
	}
}